<div class="container mt-4">
  <!-- Reproductor de video -->
  <div class="row">
    <div class="col-12">
      <div class="embed-responsive embed-responsive-16by9">
        <video class="w-100" controls>
          <source src="<%=  %>" type="video/mp4">
          Tu navegador no soporta el reproductor de video.
        </video>
      </div>
    </div>
  </div>

  <!-- Informaci칩n del video -->
  <div class="row mt-4">
    <div class="col-md-8">
      <h2 class="text-highlight"><%= @video.title %></h2>
      <p class="text-muted">Publicado por <strong><%= @video.user.email_address %></strong> el <%= @video.created_at.strftime("%d de %B de %Y") %></p>
      <p><%= @video.description %></p>
    </div>
    <div class="col-md-4 text-center">
      <div class="d-flex justify-content-center align-items-center gap-3">
        <button class="btn btn-highlight btn-lg">
          <i class="bi bi-hand-thumbs-up"></i> Me gusta (<%= @video.likes_count rescue 0 %>)
        </button>
      </div>
    </div>
  </div>

  <!-- Secci칩n de comentarios -->
  <div class="row mt-5">
    <div class="col-12">
      <h3 class="text-highlight">Comentarios (<%= @video.comments.count rescue 0 %>)</h3>

      <!-- Formulario para agregar comentario -->
      <% if authenticated? %>
        <form action="<%= video_comments_path(@video) %>" method="post">
          <%= csrf_meta_tags %>
          <div class="mb-3">
            <textarea class="form-control" name="comment[content]" rows="3" placeholder="Escribe un comentario..." required></textarea>
          </div>
          <button type="submit" class="btn btn-highlight">Publicar</button>
        </form>
      <% else %>
        <p>Debes <a href="/users/sign_in">iniciar sesi칩n</a> para dejar un comentario.</p>
      <% end %>

      <!-- Lista de comentarios -->
      <div class="mt-4">
        <% [].each do |comment| %>
          <div class="mb-3">
            <div class="d-flex align-items-center">
              <strong><%= comment.user.username %></strong>
              <span class="text-muted ms-2"><%= time_ago_in_words(comment.created_at) %> atr치s</span>
            </div>
            <p class="mb-0"><%= comment.content %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
